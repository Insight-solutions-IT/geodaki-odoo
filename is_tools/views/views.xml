        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="is_tools" id="is_tools.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Menu" id="is_tools.menu_1" parent="is_tools.menu_root"/>
<!--
    <menuitem name="Menu 2" id="is_tools.menu_2" parent="is_tools.menu_root"/>
-->
    <!-- actions -->
    <menuitem name="List DH" id="is_tools.menu_1_list" parent="is_tools.menu_1"
    action="is_tools.action_window"/>

    <menuitem name="List VD" id="is_tools.menu_1_list1" parent="is_tools.menu_1"
    action="is_tools.action_window2"/>
