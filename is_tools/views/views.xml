<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="is_tools.list">
      <field name="name">Tools list DH</field>
      <field name="model">is_tools.dh</field>
      <field name="arch" type="xml">
        <tree>
          <field name="deviceid"/>
          <field name="datej"/>
          <field name="activite"/>
          <field name="contact"/>
          <field name="arret"/>
          <field name="roulage"/>
        </tree>
      </field>
    </record>

    


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="is_tools.action_window">
      <field name="name">List DH</field>
      <field name="res_model">is_tools.dh</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.ui.view" id="is_tools.list2">
      <field name="name">Tools list VD</field>
      <field name="model">is_tools.vd</field>
      <field name="arch" type="xml">
        <tree>
          <field name="deviceid"/>
          <field name="datej"/>
          <field name="dist"/>
          <field name="vit"/>
          <field name="vitmin"/>
          <field name="vitmax"/>
          <field name="gaz"/>
          <field name="km"/>
        </tree>
      </field>
    </record>

    








    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="is_tools.action_window2">
      <field name="name">List VD</field>
      <field name="res_model">is_tools.vd</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
