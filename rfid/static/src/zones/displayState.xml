<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="rfid.leftSideZones" owl="1">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

        <div id="treeContanair" class="treeContanair">
            <div class="divButton">
                <span id="DisplayTree" t-on-click="DisplayTree" class="material-symbols-outlined">
                delete
                </span>
            </div>
            <div id="TreeDiag" class="TreeDiag">
                <div id="left_1" class="slide-show">
                    <div style="margin-left: 13px">
                        <div class="dateDiv">
                            <label for="startDate">Du:</label>
                            <input class="startDate" id="date_du" type="date"></div>
                            <div class="dateDiv">
                                <input id="time_du" style="margin-left: 4%;" type="time" value="00:00"></div>
                            </div>
                        </div>
                        <div>

                            <div class="dateDiv">
                                <label for="endDate">Au:</label>
                                <input id="date_au" class="endDate" type="date"></div>
                                <div class="dateDiv">
                                    <input id="time_au" style="margin-left: 4%;" type="time" value="23:00"></div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="left_s">
                        <input placeholder="Rechercher Vehicules ..." id="searchInputRef" class="inputSearch" t-ref="searchInputRef" />
                        <div id="jstree" t-ref="jstree">
                        <ul class="list-group">
                            <t t-foreach="state.zones" t-as="zone" t-key="zone.id">
                                <t t-set="data" t-value="getData(zone)"/>
                                <li t-attf-class="list-group-item d-flex justify-content-between align-items-center pb-1 pt-1 ">
                                    <div class="o_kanban_record_has_image_fill">
                                        <!-- <img src="is_bav/static/img/bacs/bpl770-vert.png" class="o_kanban_image_fill_left o_kanban_image_full o_image_40_cover" alt="Avatar"/> -->
                                    </div>

                                    <a href="#" class="flex-grow-1 o_map_sidebar_record" data-toggle="tooltip" t-on-click="() => handleRfidMap(zone, state.latitude, state.longitude, map)">
                                        <span class="title" t-esc="zone.gshape_name" />
                                        <t t-if="zone.display_name"> 
                                            <br/>
                                            <t t-if="zone.gshape_color">
                                                <i class="fa fa-map-marker" ></i>
                                                <span> </span>
                                            </t>
                                            <span class="text-muted" t-esc="zone.display_name"/>
                                        </t>
                                    </a>

                                    <button type="button" class="btn btn-sm btn-light display_detail" t-attf-id="open_record_#{zone.id}" data-toggle="tooltip" title="Open form" >
                                        <i class="fa fa-arrow-right"  t-attf-id="open_record_#{zone.id}"></i>
                                    </button>
                                </li>
                            </t>
                            <!-- <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Youssoufia
                                    <span class="badge bg-primary rounded-pill">14</span>
                                </li>
                            </ul> -->
                        </div>
                        <div id="etat_affichage">
                            <table style="width:100%; height:50px">
                                <tr>
                                    <td>
                                        <input type="radio" name="etat_lavage_collect" id="etat_collecte" checked="true"/>
                                        <label for="etat_collecte">Collecte </label>
                                    </td>
                                    <td>
                                        <input type="radio" name="etat_lavage_collect" id="etat_lavage"/>
                                        <label for="etat_lavage"> Lavage </label>
                                    </td>
                                </tr>
                            </table>
                            <table style="width:100%; height:50px">
                                <tr>
                                    <td>
                                        <input type="radio" name="type_cont" id="type_bac" checked="true"/>
                                        <label for="type_bac">Bacs</label>
                                    </td>
                                    <td>
                                        <input type="radio" name="type_cont" id="type_colonne"/>
                                        <label for="type_colonne">Colonne</label>
                                    </td>
                                    <td>
                                        <input type="radio" name="type_cont" id="type_caisson"/>
                                        <label for="type_caisson">Caisson</label>
                                    </td>
                                    <td>
                                        <input type="radio" name="type_cont" id="type_tous"/>
                                        <label for="type_tous">Tous</label>
                                    </td>
                                </tr>
                            </table>
                            <button class="form-control btn btn-success" id="display_stat">Afficher l'etat de collecte des bacs</button>

                        </div>
                    </div>




                </div>
                <div id="left_2" class="slide-hide">
                    <div id="is_rfid_home_button">
                        <button class="form-control btn btn-danger fa fa-home" id="is_rfid_home_zones"></button>
                        <p>
                            Zone: <span id="SelectedVehText"></span>
                            <br/>
                            Chift   : <span id="chiftSelectedText"></span>
                        </p>
                        <!-- <button id="testaziz">test</button> -->
                    </div>
                    <div id="is_rfid_Canvas" class="is_rfid_Canvas">
                        <canvas id="is_rfid_zones_chart"></canvas>
                    </div>
                    <div id="is_rfid_table" class="is_rfid_table">

                    </div>
                </div>
            </div>
        </t>
    </template> 