                                            <tr>
                                                <th>
                                                    <strong>Véhicule</strong>
                                                </th>
                                                <th>
                                                    <strong>DIST (KM)</strong>
                                                </th>
                                                <th>
                                                    <strong>VIT MOY</strong>
                                                </th>
                                                <th>
                                                    <strong>DATE</strong>
                                                </th>
                                            </tr>
                                            <tr>
                                                <td style=" width: 125px; ">
