    <!-- Top menu item -->

    <menuitem name="Planning" id="is_planning.menu_root"  groups="is_planning.p_user" web_icon="is_planning,static/description/icon.png"/>
    
    <!-- menu categories -->

    <menuitem name="Configuration" groups="is_planning.p_user" id="is_planning.config_planning" parent="is_planning.menu_root"/>
    <!-- <menuitem name="Menu 2" id="is_planning.menu_2" parent="is_planning.menu_root"/> -->

    <!-- actions -->

    <menuitem name="Planification" groups="is_planning.p_user" id="is_planning.config_planning_planif" parent="is_planning.config_planning"
              action="is_planning.action_window"/>
    <menuitem name="par default" id="is_planning.default2" groups="is_planning.p_admin" parent="is_planning.config_planning"
              action="is_planning.action_window2"/>
    <!-- <menuitem name="Server to list" id="is_planning" parent="is_planning.menu_2"
              action="is_planning.action_server"/> -->

  </data>
</odoo>